                  <TextField fx:id="straße" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="plz" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="ort" GridPane.columnIndex="1" GridPane.rowIndex="5" />
